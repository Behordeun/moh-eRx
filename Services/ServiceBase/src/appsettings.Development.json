{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/Pharmanet/",
        "KnownProxies": []
    },
    "AllowedHosts": "*",
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health PharmaNet API documentation",
            "Description": "Provides API documentation for the Pharmanet API MedicationService services.",
            "License": {
                "Name": "Apache 2.0 License",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "OpenIdConnect": {
        "Scope": "system/MedicationRequest.write user/MedicationRequest.write system/MedicationRequest.read system/*.write system/*.read",
        "Audience": "pharmanet",
        "ClaimsIssuer": "https://sso-dev.pathfinder.gov.bc.ca/auth/realms/ff09qn3f",
        "Authority": "https://sso-dev.pathfinder.gov.bc.ca/auth/realms/ff09qn3f"
    },
    "Hl7v2Authorization": {
            "ZPN|100001": {
                "MessageType": "ZPN",
                "ControlId": "100001",
                "Scope": "system/MedicationRequest.write system/*.write"
            },
            "ZPN|100002": {
                "MessageType": "ZPN",
                "ControlId": "100002",
                "Scope": "system/MedicationRequest.read system/*.read"
            }
    },
    "PharmanetProxy": {
        "Endpoint": "https://tbd",
        "Username": "username",
        "Password": "password"
    }
}
