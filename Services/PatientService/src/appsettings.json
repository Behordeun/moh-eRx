    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/Pharmanet",
        "KnownProxies": []
    },
    "AllowedHosts": "*",
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health.PharmaNet Patient API documentation",
            "Description": "Provides API documentation for the eRx API Patient service.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "Hl7v2Authorization": {
        "MessageConfig": [
            {
                "Name": "TPN_00_REQUEST - 94012",
                "MessageType": "ZPN",
                "Scope": "system/Patient.read system/*.read",
                "MessageSegments": [
                    {
                        "SegmentName": "ZZZ",
                        "SegmentFields": [
                            {
                                "Index": "1",
                                "Value": "TPN"
                            },
                            {
                                "Index": "3",
                                "Value": "294011"
                            }
                        ]
                    },
                    {
                        "SegmentName": "ZCA",
                        "SegmentFields": [
                            {
                                "Index": "3",
                                "Value": "00"
                            }
                        ]
                    }
                ]
            },
            {
                "Name": "TPI_00_REQUEST - 150146",
                "MessageType": "ZPN",
                "Scope": "system/Patient.write system/*.write",
                "MessageSegments": [
                    {
                        "SegmentName": "ZZZ",
                        "SegmentFields": [
                            {
                                "Index": "1",
                                "Value": "TPI"
                            },
                            {
                                "Index": "3",
                                "Value": "150146"
                            }
                        ]
                    },
                    {
                        "SegmentName": "ZCA",
                        "SegmentFields": [
                            {
                                "Index": "3",
                                "Value": "00"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "OpenIdConnect": {
        "Audience": "pharmanet",
        "Authority": "{keycloak realm license plate URL}",
        "ClaimsIssuer": "{keycloak realm license plate URL}",
        "Scope": "system/Patient.write system/*.write system/Patient.read system/*.read"
    },
    "PharmanetProxy": {
        "Endpoint": "{pharmanet_endpoint}",
        "Password": "{password}",
        "Username": "{username}",
        "ClientCertificatePath": "/usr/local/pharmanet/d1pnetgwy.pfx",
        "ClientCertificatePassword": "{cert password}"
    }
